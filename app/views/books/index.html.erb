<h1>My Book List</h1>
</br>

<table class="table table-striped table-condensed">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Amazon link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.author %></td>
<!--    <td><%= link_to raw(book.amazon_link) %></td> -->
    <td><%= link_to  'Book Link on Amazon', raw(get_amazon_link(book.title, book.author)) %>
    <td><%= link_to 'Edit', edit_user_book_path(current_user, book) %></td>
    <td><%= link_to 'Destroy', [current_user, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_user_book_path(current_user), class: "btn btn-large btn-primary" %>
