<h1>My Book List</h1>
</br>

<table class="table table-striped table-condensed">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Amazon Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% if @books.count.zero? %>
  <p><center>You do not currently have any books.  To add some, click New Book below.</center></p></br>
<% end %>

<% @books.each do |book| %>
  <tr>
    <td><%= link_to book.title, user_book_path(current_user, book) %></td>
    <td><%= book.author %></td>
    <td><%= link_to  raw(amazon_pic_url(book.asin)) %>
    <td><%= link_to 'Edit', edit_user_book_path(current_user, book) %></td>
    <td><%= link_to 'Remove', [current_user, book], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Book', new_user_book_path(current_user), class: "btn btn-large btn-primary" %>
