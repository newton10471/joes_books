<h1>All Books</h1>

<table class="table table-striped table-condensed">
	<tr>
	  <th>Title</th>
	  <th>Author</th>
	  <th>Amazon Link</th>
	  <th>Suggested By</th>
	  <!-- <th>Vote</th> -->
	  <th></th>
	</tr>

	<% @books.each do |book| %>
	<tr>
	  <td><%= book.title %></td>
	  <td><%= book.author %></td>
	  <td><%= link_to  raw(amazon_pic_url(book.asin)) %>
	  <td><%= User.find_by_id(book.user_id).first_name %></td>
	  <!--  <td><input type="checkbox" name="size[]"></td> -->
	  <!--  <td><%= link_to 'Discuss', all_book_path(book) %></td> -->
	</tr>
	<% end %>
</table>

