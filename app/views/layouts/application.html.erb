<!DOCTYPE html>
<html>
	<head>
	  <title>Joe's Books</title>
	  <%= stylesheet_link_tag    "application", media: "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	  <!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
	</head>

	<body>
		<header class="navbar navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container">
					<%= link_to "joe\'s books", root_path, id: "logo" %>
					
					<nav>
						<ul class="nav pull-right">
							<% if user_signed_in? %>
								<li><%= link_to 'Home', user_books_path(current_user) %></li>
								<li><%= link_to 'Vote', new_user_vote_path(current_user) %></li>
								<li><%= link_to 'All books', all_books_index_path %></li>
								<li><%= link_to 'All votes', all_votes_path %></li>
								<% if current_user.admin? %>
									<li><%= link_to 'Admin page', static_pages_admin_home_path %></li>
								<% end %>
								<li><%= link_to 'Sign out', destroy_user_session_path, method: "delete" %></li>
							<!--	Signed in as user 
								<%= current_user.email %>  -->
							<% end %>
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<div class="container">
			<p class="notice"><%= notice %></p>
			<p class="alert"><%= alert %></p>

			<%= yield %>

			</p>
		</div>
	</body>
</html>
