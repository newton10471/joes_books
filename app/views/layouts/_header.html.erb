<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "joe\'s books", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if user_signed_in? %>
            <li><%= link_to 'Home', user_books_path(current_user) %></li>
            <li><%= link_to 'Vote', new_user_vote_path(current_user) %></li>
            <li><%= link_to 'All books', all_books_index_path %></li>
            <li><%= link_to 'All votes', all_votes_path %></li>
            <% if current_user.admin? %>
              <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Admin <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to 'Start a New Election', new_all_vote_path, data: { confirm: 'Are you sure? This will delete all current votes.' } %></li>
                <li><%= link_to 'Complete a Voting Round', all_votes_complete_round_path, data: { confirm: 'Are you sure? This will reset all current votes, and advance to the next round.' } %></li>
                <li><%= link_to 'Send Email Reminder to Non-Voters', '#' %></li>
                <li><%= link_to 'Compose Message to All Users', '#' %></li>
              </ul>
            </li>
            <% end %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                My Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>