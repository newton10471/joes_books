<h1>Voting Form</h1></br>

<%= form_for [current_user, @vote] do |f| %>
  <% if @vote.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vote.errors.count, "error") %> prohibited this vote from being saved:</h2>

      <ul>
      <% @vote.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Amazon link</th>
    <th>Suggested By</th>
		<th>Vote</th> 
		<th></th>
  </tr>

	<% @books.each do |book| %>
	  <tr>
	    <td><%= book.title %></td>
	    <td><%= book.author %></td>
	    <td><%= link_to  'On Amazon.com', raw(get_amazon_link(book.title, book.author)) %></td>
	    <td><%= User.find_by_id(book.user_id).first_name %></td>
	    <td>
	    <div class="field">
    		<%= f.check_box :book_id %>
  		</div>
			</td> 
	    <!-- <td><%= link_to 'Show', user_book_path(current_user, book) %></td> -->
	  </tr>
	<% end %>
	</table>

	<br />

  <div class="actions">
    <%= f.submit "Submit my Vote" %>
  </div>
<% end %>

<%= link_to 'Back', user_votes_path %>
