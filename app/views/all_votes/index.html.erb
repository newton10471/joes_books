<h1>Show All Votes in the Current Round</h1>

	<table>
		<tr>
		  <th>Title</th>
		  <th>Author</th>
		  <th>Amazon link</th>
		  <th>Suggested By</th>
		  <th># Votes</th>
		  <th></th>
		</tr>

		<% @books.each do |book| %>
		<tr>
		  <td><%= book.title %></td>
		  <td><%= book.author %></td>
		  <td><%= link_to  'Book Link on Amazon', raw(get_amazon_link(book.title, book.author)) %>
		  <td><%= User.find_by_id(book.user_id).first_name %></td>
		  <td><%= book.votes.count %></td>
		</tr>
		<% end %>
	</table>

	<br />
